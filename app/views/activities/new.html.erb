<h3>Create New To-do</h3>

<%= form_for :activity, url: activities_path do |a| %>
	<p>
		<%= a.label :name, "Title" %><br/>
		<%= a.text_field :name %>
	</p>

	<p>
		<%= a.label :description, "Description" %><br/>
		<%= a.text_area :description %>
	</p>

	<p>
		<%= a.hidden_field :done, { :value => false} %>
	</p>

	<p>
		<%= a.submit "Add Task" %>
	</p>

<% end %>

<%= link_to "Back", activities_path %>