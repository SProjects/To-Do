<h3>Edit Task</h3>

<%= form_for :activity, url: activity_path(@activity), method: :patch do |a| %>
	<p>
		<%= a.label :name, "Title" %><br/>
		<%= a.text_field :name %>
	</p>

	<p>
		<%= a.label :description, "Description" %><br/>
		<%= a.text_area :description %>
	</p>

	<p>
		<%= a.label :done, "Status" %><br/>
		<%= a.select :done, [["Incomplete", false],["Complete", true]] %>
	</p>

	<p>
		<%= a.submit "Update Task" %>
	</p>

<% end %>

<%= link_to "Back", activities_path %>